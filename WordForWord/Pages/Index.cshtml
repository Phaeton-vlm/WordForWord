@page

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <section id="search-section">

        <div>
            <div class="container">

                <div class="div-key-word">
                    <div>
                        <h1 class="key-word">КАРТИНА</h1>
                        <hr class="underline" />
                    </div>
                </div>

                <form id="get-words-form" name="get-word-form" method="get">

                    <div>
                        <input maxlength="15" id="get-keyword" type="text" placeholder="Введите слово" />
                        <button class="submit-button" id="submit" type="submit">Искать</button>



                        <h5 id="input-Keyword-error" style="color:red"></h5>
                    </div>

                </form>

            </div>
        </div>

    </section>


    <section id="words-result-section">

        <div class="container">

            <div class="row col-md-12 d-flex justify-content-center">

                <div>
                    <h2 class="header-section">СЛОВА</h2>
                    <hr class="underline" />
                </div>

            </div>

            <div class="row">
                <div id="search-result">

                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <button id="change-display-words" class="common-button">Подобрать слова</button>

                </div>
                <div class="col-12">
                    <button class="common-button">Поменять выделение</button>

                </div>

            </div>
        </div>

    </section>



    <section id="fillword-section">
        <div class="container">
            <div class="row col-md-12 d-flex justify-content-center">

                <div>
                    <h2 class="header-section">ФИЛВОРД</h2>
                    <hr class="underline" />
                </div>

            </div>

            <div class="row d-flex justify-content-center">



                <table id="table-fillword">
                    <tbody>
                        @for (int i = 0; i < 4; i++)
                        {
                            <tr>
                                @for (int j = 0; j < 7; j++)
                                {
                                    <td><span></span></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>

                </


            </div>

        </div>
    </section>

    <section id="sudoku-section">
        <div class="container">
            <div class="row col-md-12 d-flex justify-content-center">

                <div>
                    <h2 class="header-section">СУДОКУ</h2>
                    <hr class="underline" />
                </div>

            </div>

            <div class="row">

                <div class="col-md-6 col-sm-12 d-flex justify-content-center">

                    <table id="table-sudoku">
                        <tbody>
                            @for (int i = 0; i < 4; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < 4; j++)
                                    {
                                        <td><span>d</span></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

                <div class="col-md-6 col-sm-12  d-flex justify-content-start flex-column">
                    <div class="row">
                        <h4 class="list-header">Выберите слово:</h4>

                        <div id="sudoku-values" class="select-box">

                            <div class="options-container">

                            </div>

                            <div class="selected">
                                Нет значений
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>
    </section>

    <section id="crossword-section">

        <div class="container">
            <div class="row col-md-12 d-flex justify-content-center">

                <div>
                    <h2 class="header-section">КРОССВОРД</h2>
                    <hr class="underline" />
                </div>

            </div>

            <div class="row">

                <div class="col-md-6 col-sm-12 d-flex justify-content-center">

                    <table id="table-crossword">
                        <tbody>
                            @for (int i = 0; i < 8; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < 7; j++)
                                    {
                                        <td><span></span></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

                <div class="col-md-6 col-sm-12  d-flex justify-content-start flex-column">
                    <div class="row">
                        <h4 class="list-header">Выберите слово:</h4>
                        <div class="row col-md-12">


                            <div id="crossword-values" class="select-box">

                                <div class="options-container">

                                </div>

                                <div class="selected">
                                    Нет значений
                                </div>

                            </div>

                            <div id="crossword-repeat-btn" class="repeat-btn">
                                <i class="fas fa-redo fa-lg"></i>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>

    </section>

    <section id="chess-section">

        <div class="container">
            <div class="row col-md-12 d-flex justify-content-center">

                <div>
                    <h2 class="header-section">ШАХМАТЫ</h2>
                    <hr class="underline" />
                </div>

            </div>

            <div class="row">

                <div class="col-md-6 col-sm-12 d-flex justify-content-center">

                    <table id="table-chess">
                        <tbody>
                            @for (int i = 0; i < 8; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < 8; j++)
                                    {
                                        <td><span></span></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

                <div class="col-md-6 col-sm-12  d-flex justify-content-start flex-column">

                    <div class="row">
                        <h4 class="list-header">Выберите фигуру:</h4>
                        <div class="row col-md-12">

                            <div id="rook" class="chess-figure">
                                <i class="fas fa-chess-rook fa-lg"></i>
                            </div>

                            <div id="bishop" class="chess-figure">
                                <i class="fas fa-chess-bishop fa-lg"></i>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <h4 class="list-header">Выберите слово:</h4>
                        <div class="row col-md-12">


                            <div id="chess-values" class="select-box">

                                <div class="options-container">

                                </div>

                                <div class="selected">
                                    Нет значений
                                </div>

                            </div>

                            <div id="chess-repeat-btn" class="repeat-btn">
                                <i class="fas fa-redo fa-lg"></i>
                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </div>




    </section>

</div>

@section Scripts {

    <script src="~/js/WordsScript.js" asp-append-version="true"></script>

}
